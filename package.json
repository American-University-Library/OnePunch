{
    "name": "onepunch",
    "productName": "OnePunch",
    "version": "1.1.0",
    "description": "A logger for patron interactions",
    "main": "src/main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/aspau/OnePunch.git"
    },
    "author": "aspau",
    "license": "MIT",
    "dependencies": {
        "electron-settings": "^3.1.3"
    },

    "build": {
        "appId": "com.onepunch",
        "productName": "OnePunch",
        "directories": {
            "buildResources": "src/build"
        },
        "icon": "src/build/icon.ico",
        "nsis": {
            "installerIcon": "src/build/icon.ico",
            "uninstallerIcon": "src/build/icon.ico",
            "perMachine:" true
        }
    },
    "devDependencies": {
        "electron": "~1.7.8",
        "electron-builder": "^19.37.2",
        "electron-packager": "^9.1.0"
    }
}
